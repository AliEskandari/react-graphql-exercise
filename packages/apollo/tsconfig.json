{
    "compilerOptions": {
        "rootDirs": [
            "src"
        ],
        "outDir": "dist",
        "lib": [
            "es2020"
        ],
        "target": "es2020",
        "module": "CommonJS",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "types": [
            "node"
        ],
        "baseUrl": ".",
        "strict": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "noUncheckedIndexedAccess": true,
        "exactOptionalPropertyTypes": true,
        "paths": {
            "@/*": [
                "./src/*"
            ]
        },
        "noEmit": false,
        "noEmitOnError": false,
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}